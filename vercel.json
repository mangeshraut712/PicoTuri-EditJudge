{
  "version": 2,
  "name": "picoturi-editjudge",
  "buildCommand": "npm run build",
  "outputDirectory": "dashboard/dist",
  "env": {
    "PYTHON_VERSION": "3.12",
    "NODE_VERSION": "18.x",
    "PYTHONUNBUFFERED": "1",
    "PYTHONPATH": "/var/task"
  },
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "dashboard/package.json",
      "use": "@vercel/next",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard/$1"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  }
}
